      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <%= form.label :category %>
  <%= form.select :category_ids, Category.all.pluck(:name, :id), {}, { multiple: true, class: "selectize" } %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

